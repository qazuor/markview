{
    "name": "markview",
    "version": "0.1.0",
    "description": "Markdown editor and previewer - Markdown, visualized",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:client\"",
        "dev:client": "vite",
        "dev:api": "tsx watch src/server/index.ts",
        "build": "tsc -b && vite build",
        "preview": "vite preview",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "format": "biome format --write .",
        "format:check": "biome format .",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "playwright test",
        "prepare": "husky",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "@codemirror/autocomplete": "^6.20.0",
        "@codemirror/commands": "^6.10.1",
        "@codemirror/lang-markdown": "^6.5.0",
        "@codemirror/language": "^6.12.1",
        "@codemirror/language-data": "^6.5.2",
        "@codemirror/lint": "^6.9.2",
        "@codemirror/search": "^6.5.11",
        "@codemirror/state": "^6.5.3",
        "@codemirror/view": "^6.39.7",
        "@emoji-mart/data": "^1.2.1",
        "@emoji-mart/react": "^1.1.1",
        "@hono/node-server": "^1.19.7",
        "@hono/zod-validator": "^0.7.6",
        "@lezer/highlight": "^1.2.3",
        "@neondatabase/serverless": "^1.0.2",
        "@radix-ui/react-context-menu": "^2.2.16",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-dropdown-menu": "^2.1.16",
        "@radix-ui/react-popover": "^1.1.15",
        "@radix-ui/react-tabs": "^1.1.13",
        "@radix-ui/react-tooltip": "^1.2.8",
        "@replit/codemirror-minimap": "^0.5.2",
        "@shikijs/rehype": "^3.20.0",
        "better-auth": "^1.4.9",
        "drizzle-orm": "^0.45.1",
        "file-saver": "^2.0.5",
        "hono": "^4.11.3",
        "html-to-image": "^1.11.13",
        "html2pdf.js": "^0.12.1",
        "i18next": "^24.2.1",
        "i18next-browser-languagedetector": "^8.0.2",
        "katex": "^0.16.27",
        "lucide-react": "^0.562.0",
        "mermaid": "^11.12.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-i18next": "^15.4.0",
        "rehype-katex": "^7.0.1",
        "rehype-sanitize": "^6.0.0",
        "rehype-stringify": "^10.0.1",
        "remark-frontmatter": "^5.0.0",
        "remark-gfm": "^4.0.1",
        "remark-lint": "^10.0.1",
        "remark-math": "^6.0.0",
        "remark-parse": "^11.0.0",
        "remark-preset-lint-recommended": "^7.0.1",
        "remark-rehype": "^11.1.2",
        "remark-stringify": "^11.0.0",
        "shiki": "^3.20.0",
        "unified": "^11.0.5",
        "zod": "^4.2.1",
        "zustand": "^5.0.2"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.0",
        "@commitlint/cli": "^19.0.0",
        "@commitlint/config-conventional": "^19.0.0",
        "@playwright/test": "^1.49.1",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@types/file-saver": "^2.0.7",
        "@types/hast": "^3.0.4",
        "@types/node": "^22.10.2",
        "@types/react": "^18.3.17",
        "@types/react-dom": "^18.3.5",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-v8": "^2.1.8",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.2.1",
        "dotenv": "^17.2.3",
        "drizzle-kit": "^0.31.8",
        "fake-indexeddb": "^6.2.5",
        "husky": "^9.0.0",
        "jsdom": "^25.0.1",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.17",
        "tsx": "^4.21.0",
        "typescript": "^5.7.2",
        "unist-util-visit": "^5.0.0",
        "vercel": "^50.1.3",
        "vite": "^6.0.5",
        "vite-plugin-pwa": "^1.2.0",
        "vitest": "^2.1.8",
        "workbox-window": "^7.4.0"
    },
    "author": "qazuor",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/qazuor/markview"
    },
    "keywords": ["markdown", "editor", "preview", "mermaid", "katex"]
}
